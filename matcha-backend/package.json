  "license": "ISC",
  "dependencies": {
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "helmet": "^8.0.0",
    "pg": "^8.13.0",
    "pino": "^9.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.4",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "pino-pretty": "^11.2.2",
    "supertest": "^7.0.0",
